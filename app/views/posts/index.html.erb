	<!DOCTYPE html>
<html>
<head>
	<title>Bookers</title>
	<link rel="stylesheet" href="application.css">
</head>

<body>
	<% if @post.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
	<h1>Books</h1>
	<table>
		<thead>
			<tr>
				<th>Title</th>
				<th>Body</th>
			</tr>
		</thead>
		<% @posts.each do |post| %>
		<tbody>
			<tr>
				<td> <%=post.title %></td>
				<td> <%=post.body %></td>
				<td> <%= link_to "Show", post_path(post.id), class: "show_#{post.id}" %></td>
				<td> <%= link_to "Edit",edit_post_path(post.id), class: "edit_#{post.id}" %></td>
				<td> <%= link_to "Destroy",destroy_post_path(post.id), class: "destroy_#{post.id}",method: :delete, data: {confirm:"本当に削除しますか？"} %></td>
			</tr>
		</tbody>
	<% end %>
</table>

	<h2>New book</h2>
	 <%= form_for(@post) do |f| %>
		<h4>Title</h4>
		<%= f.text_field :title, class: "book_title" %>
		<h4>Body</h4>
		<%= f.text_area :body, class: "book_body" %>
		<br><%= f.submit "Create Book" %></br>
	 <% end %>
</body>
</html>